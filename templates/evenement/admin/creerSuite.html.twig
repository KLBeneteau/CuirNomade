{% extends 'miseEnPage_Classique.html.twig' %}

{% block body %}
    <div class="espaceGauche">
        <p>Selecttionez les articles concernc√© par l'evenement</p>
        <table>
           <form method="post" name="liensArticles" action="{{ path('Evenement_admin_ajouter') }}">
               <tr><th><input type="submit" value="Valider"></th></tr>
               {% for article in listArticle %}
                   <tr>
                       <th>{{ article.Modele }}</th>
                       <th><input type="checkbox" value="1" name="{{ article.Modele }}"></th>
                   </tr>
               {% endfor %}
               <input type="hidden" value="{{ nomProduit }}" name="nomProduit">
               <input type="hidden" value="{{ idEvenement }}" name="idEvenement">
           </form>
        </table>
    </div>
{% endblock %}

{% block title %}
    Ajouter Evenement
{% endblock %}

