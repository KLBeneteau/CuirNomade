{% extends 'miseEnPage_Classique.html.twig' %}

{% block title %}
    Ajouter Evenement
{% endblock %}

{% block body %}
    <div>
        <form method="post" name="creerEvenement1" action="{{ path('Evenement_admin_creerSuite') }}" enctype="multipart/form-data">
            <div class="flex">
                <label for="nomEvement">Nom :</label>
                <input type="text" name="nom" id="nomEvement" required>
            </div>
            <div class="flex">
                <label for="descriptionEvenement">Description :</label>
                <input type="text" name="description" id="descriptionEvenement" required>
            </div>
            <div>
                <input type="file" name="image" accept=".png, .jpg, .jpeg" required class="inputFile" >
            </div>
            <div class="flex">
                <label for="produitEvenement">Concerne : </label>
                <select name="produit" id="produitEvenement" required>
                    {% for produit in listProduit %}
                        <option value="{{ produit.nom }}">{{ produit.nom }}</option>
                    {% endfor %}
                </select>
            </div>
            <input type="submit" value="Suivant">
        </form>
    </div>
{% endblock %}


