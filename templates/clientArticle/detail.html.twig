{%  extends 'miseEnPage_Classique.html.twig' %}

{% block title %} {{ article.Modele }} {% endblock %}

{% block body %}
    <div class="flex">
        <div id="sliderArticle" class="bloc">
            <figure>
                {% set j = 0 %}
                {% for i in 1..10 %}
                    <img src="../../../../../public/uploads/photos/{{ article.image[j] }}" alt="image de {{ article.nomTable }}">
                    {% set j=j+1 %}
                    {% if j == article.image|length %}
                        {% set j = 0 %}
                    {% endif %}
                {% endfor %}
            </figure>
        </div>
        <div>
            {% for colone in listeColonne|keys %}
            <p> {{ colone }} : {{ article[colone] }}</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}