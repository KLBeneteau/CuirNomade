{% extends 'base.html.twig' %}

{% block miseEnPage %}
    <div class="bloc">
        <nav id="main_nav" class="flex" >
            <a class="boutton" href="{{ path('main_accueil') }}" >Accueil</a>
            <a class="boutton" href="#" >Produits</a>
            <a class="boutton boutton_endNav" href="{{ path('main_presentation') }}" >L'Entreprise</a>
        </nav>
        {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
            <nav id="admin_nav" class="flex">
                <a class="boutton "  href="{{ path('invitationClient_accueil') }}">Inviter Des Clients VIP</a>
                <a class="boutton boutton_endNav"  href="{{ path('adminProduit_accueil') }}">Gestion des Produits</a>
            </nav>
        {% endif %}

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    <div id="MiseEnPage" class="flex">
        <nav id="MiseEnPage_nav" class="bloc flex column ai_stretch">
            {% for produitType in listeProduits %}
                <a href="{{ path('adminProduit_affichage', {'nomProduit': produitType.nom} ) }}" class="bouttonV2 flex jc_center">{{ produitType.nom }}</a>
            {% endfor %}
            <a href="{{ path('adminProduit_creer') }}" class="boutton boutton_endNav flex jc_center">Ajouter</a>
        </nav>
        <div class="bloc" id="MiseEnPage_main">
            <main> {% block body %} {% endblock %} </main>
        </div>

    </div>
{% endblock %}
