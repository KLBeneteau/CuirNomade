{% extends 'miseEnPage_Classique.html.twig' %}

{% block title %}Conexion{% endblock %}

{% block body %}
    {% if error %}
        <div class="flash flash-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Voues êtes conecter en tant que {{ app.user.username }}, <a class="boutton boutton_endNav" href="{{ path('app_logout') }}">déconexion</a>
        </div>
    {% endif %}

    <form name="login_form" method="post" class="espaceTopBot">
        <div id="login_form">

            <div>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html #}

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                </label>
            </div>

            <div class="espaceHaut">
                <a class="boutton boutton_endNav" href="{{ path('app_motDePasseOublier') }}">Mot de passe oublié</a>
                <button class="boutton boutton_endNav" type="submit">
                    Se connecter
                </button>
            </div>

        </div>
    </form>

{% endblock %}
