{% extends 'miseEnPage_Colonne_GestionProduit_nomProduit.html.twig' %}

{% block body2 %}
    <div class="espaceGauche">
        <div class="flex" id="textAjoutProduit">
            {% for produit in listeProduits %}
                {% if produit.nom == nomProduit %}
                    {% if produit.isVip %} <p>Ce produit est réservé au clients VIP</p>
                    {% else %} <p>Ce produit n'est pas réservé au client VIP</p>
                    {% endif %}
                {% endif %}
            {% endfor %}
            <a id="bouttonAjoutProduit" class="bouttonV2 flex ai_center" href="{{ path('adminArticle_accueil', {'nomProduit': nomProduit ,'isModification':0}) }}">Editer les articles</a>
        </div>
        <form method="post" action="{{ path('adminProduit_affichage', {'nomProduit': nomProduit}) }}" class="espaceHaut">
            <label for="recherche">Modele : </label>
            <input type="text" name="recherche" id="recherche">
            <input type="submit" value="Rechercher">
        </form>
        <div class="scroll-x">
            <table id="affichageProduit_Table">
               <tr>
                   {% for nom in listeColonne|keys %}
                       <th>{{ nom }}</th>
                   {% endfor %}
               </tr>
               {% for article in listeArticle %}
                   <tr>
                       {% for key,valeur in article %}
                           {% if key in  listeColonne|keys  %}
                               <th> {{ valeur }}</th>
                           {% endif %}
                       {% endfor %}
                   </tr>
               {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}

{% block title %}
    Produit : {{ nomProduit }}
{% endblock %}

